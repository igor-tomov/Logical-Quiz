doctype html
html(lang='en')
    head
       meta(charset='utf-8')
       meta(http-equiv='X-UA-Compatible', content='IE=edge')
       meta(name='viewport', content='width=device-width, initial-scale=1.0')
       meta(name='description', content='Logical quiz')
       meta(name='author', content='stepennwolf@gmail.com')
       title= title

       block css
         if env == 'production' || env == 'test'
             link(rel='stylesheet', href='/styles/css/build/main.bundle.#{version}.min.css')
         else
             link(rel='stylesheet', href='/bower_components/bootstrap/dist/css/bootstrap.css')
             link(rel='stylesheet', href='/bower_components/animate.css/animate.css')
             link(rel='stylesheet', href='/styles/css/build/main.bundle.#{version}.css')
       block js
         if env == 'production' || env == 'test'
             script(src='/bower_components/requirejs/require.js')
             script(src='/js/build/dist.#{version}.js')
         else
             script(src='http://localhost:35729/livereload.js')
             script(src='/bower_components/jquery/jquery.min.js')
             script(src='/bower_components/bootstrap/dist/js/bootstrap.min.js')
             script(src='/bower_components/requirejs/require.js', data-main='/js/main.js')
body
    //Header layer
    .header-layer(data-aura-component='header-layer')!= header
    // Front-layer
    .front-layer(data-aura-component1='front-layer')
        .front-inner
            .container
                .row
                    .front-content
                        h1 Logical quiz
                        h2 Welcome to logical quiz
                        p.lead
                            | Cover is a one-page template for building simple and beautiful home pages. Download, edit the text, and add your own fullscreen background photo to make it your own.
                        p.lead
                            button.btn.btn-theme Get started
    footer
        .container
            .row
                p Some footer content